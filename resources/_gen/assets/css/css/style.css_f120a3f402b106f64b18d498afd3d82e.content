* {
  padding: 0;
  margin: 0;
  scroll-behavior: smooth; }

html, body, .hero, .columns, .column, .is-fullheight {
  height: 100%; }

.menu {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 20%;
  overflow-y: auto;
  background-color: #44C81A; }

.social-icons {
  margin-left: 10%; }

.social-icons a {
  color: white;
  font-size: .8rem; }

.navbar-bottom-icon {
  position: absolute;
  bottom: 2%;
  left: 50%;
  border: 2px solid black;
  transform: translateX(-50%); }
